<% if @orders.count > 0 %>
  <table class="w-full whitespace-nowrap border rounded-lg shadow text-center">
    <thead class="bg-gray-100">
      <tr>
        <th>Pao</th>
        <th>Acompanhamento</th>
        <th>Descricao</th>
        <th>Nome</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr class="hover:bg-gray-50 h-10 border">
          <td><%= order.food %></td>
          <td><%= order.accompaniment %></td>
          <td><%= order.description %></td>
          <td><%= order.name %></td>
          <td><%= button_to 'Remover', order_path(order), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="text-center text-lg border shadow rounded bg-indigo-100 py-2 w-full">
    <span>Hoje ainda nÃ£o foi realizado nenhum pedido ðŸ˜Š</span>
  </div>
<% end %>